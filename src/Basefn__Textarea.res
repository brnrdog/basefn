%%raw(`import './Basefn__Textarea.css'`)

open Xote

@jsx.component
let make = (
  ~value: Signal.t<string>,
  ~onInput=?,
  ~placeholder: string="",
  ~disabled: bool=false,
) => {
  let onInput = (e: Dom.event) => {
    let t = Basefn__Dom.target(e)
    let v = t["value"]

    Signal.set(value, v)

    switch onInput {
    | Some(onInput) => onInput(v)
    | None => ()
    }
  }

  <textarea class="basefn-textarea" placeholder value disabled onInput />
}
